@{
    Layout = "~/Views/Shared/_TissMaster.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <link href="~/site/css/MenuLinkStyle.css" rel="stylesheet" />
    <link href="~/site/css/ViewArticle.css" rel="stylesheet" />
</head>
<body>
    <div class="layout">
        <!-- Header and Banner Section -->
        <div class="container-fluid px-0 mt-header">
            <div class="BasePageLayout">
                <div class="BasePageBanner position-relative">
                    <div class="Mask position-absolute w-100 h-100" style="background-color: rgba(0, 0, 0, 0.5);"></div>
                    <img class="PageBannerItemBg img-fluid d-none d-lg-block w-100" src="/site/img/banner_research.25875290.jpg" alt="科普專欄封面圖片" title="科普專欄封面圖片">
                    <!-- Alternative image for smaller screens, uncomment if necessary -->
                    <!-- <img class="PageBannerItemBg d-block d-lg-none w-100" src="/site/img/banner_research_m.3413fe57.jpg" alt="科普專欄封面圖片"> -->
                    <div class="container position-relative text-center text-white py-5">
                        <h1 class="BannerTitle display-4" title="Popular Science">Popular Science</h1>
                        <p class="BannerSubTitle lead">
                            <img class="icon me-2" src="/site/img/title_icon_white.5e98ec4e.svg" alt="科普專欄" title="科普專欄">
                            科普專欄
                        </p>
                    </div>
                </div>

                <!-- Main Content Section -->
                <section class="el-container">
                    <div class="row">
                        <!-- Sidebar Section -->
                        <aside class="el-aside col-lg-3 mb-4">
                            <!-- Breadcrumb for smaller screens -->
                            <nav class="BaseBreadcrumb d-block d-lg-none">
                                <div class="container">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="/Tiss/Home">首頁</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">科普專欄</li>
                                    </ol>
                                </div>
                            </nav>

                            <!-- Sidebar Navigation Menu -->
                            <div class="content">
                                <h4 class="Title mb-4" title="科普專欄">科普專欄</h4>
                                <ul class="Menu list-group">
                                    <li class="list-group-item"><a class="MenuLink text-decoration-none" href="/Tiss/research" title="全部文章">全部文章</a></li>
                                    <li class="list-group-item"><a class="MenuLink text-decoration-none" href="/Tiss/sportMedicine" title="運動醫學">運動醫學</a></li>
                                    <li class="list-group-item"><a class="MenuLink text-decoration-none" href="/Tiss/sportTech" title="運動科技">運動科技</a></li>
                                    <li class="list-group-item"><a class="MenuLink text-decoration-none" href="/Tiss/sportScience" title="運動科學">運動科學</a></li>
                                    <li class="list-group-item"><a class="MenuLink text-decoration-none" href="/Tiss/sportsPhysiology" title="運動生理">運動生理</a></li>
                                    <li class="list-group-item"><a class="MenuLink text-decoration-none" href="/Tiss/sportsPsychology" title="運動心理">運動心理</a></li>
                                    <li class="list-group-item"><a class="MenuLink text-decoration-none" href="/Tiss/physicalTraining" title="體能訓練">體能訓練</a></li>
                                    <li class="list-group-item"><a class="MenuLink text-decoration-none" href="/Tiss/sportsNutrition" title="運動營養">運動營養</a></li>
                                    <li class="list-group-item"><a class="MenuLink text-decoration-none" href="/Tiss/childrenScience" title="兒少科普">兒少科普</a></li>
                                    <li class="list-group-item"><a class="MenuLink text-decoration-none" href="/Tiss/SciencePosterDownLoad" title="科普海報下載專區">科普海報下載專區</a></li>
                                    @if (Session["LoggedIn"] != null && (bool)Session["LoggedIn"])
                                    {
                                        <li class="list-group-item"><a class="MenuLink text-decoration-none text-warning" href="/Tiss/ArticleCreate" title="新增文章">新增文章</a></li>
                                    }
                                </ul>
                            </div>
                        </aside>

                        <!-- Main Content Area -->
                        <main class="el-main col-lg-9 bg-white">
                            <div class="MainContainer">
                                <!-- Breadcrumb for larger screens -->
                                <nav class="BaseBreadcrumb d-none d-lg-block mb-4">
                                    <div class="container">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="/Tiss/Home">首頁</a></li>
                                            <li class="breadcrumb-item active" aria-current="page">科普專欄</li>
                                        </ol>
                                    </div>
                                </nav>

                                <!-- Articles Section -->
                                <div class="NewsVideoList container">
                                    <div class="row">
                                        @foreach (var article in Model)
                                        {
                                            <div class="col-md-4 mb-4">
                                                <a href="@Url.Action("ViewArticle", "Tiss", new { encryptedUrl = article.EncryptedUrl })" class="text-decoration-none">
                                                    <div class="card h-100 shadow-sm">
                                                        <div class="NewsItemImg position-relative">
                                                            @if (article.ImageContent != null)
                                                            {
                                                                string base64Image = Convert.ToBase64String(article.ImageContent);
                                                                <img src="data:image/png;base64,@base64Image" class="card-img-top" alt="圖片" />
                                                            }
                                                            <span class="badge bg-primary position-absolute top-0 start-0 m-2">@article.ContentType</span>
                                                            <div class="Mask position-absolute w-100 h-100 top-0 start-0 d-flex align-items-center justify-content-center text-white" style="background-color: rgba(0, 0, 0, 0.5);" title="閱讀更多">閱讀更多</div>
                                                        </div>
                                                        <div class="card-body">
                                                            <h5 class="card-title el-text is-line-clamp NewsItemTitle">@article.Title</h5>
                                                            <p class="card-text el-text is-line-clamp NewsItemContent">@article.BodyContent</p>
                                                        </div>
                                                        <div class="card-footer d-flex justify-content-between align-items-center">
                                                            <small class="text-muted">@article.Hashtags</small>
                                                            <small class="text-muted">@article.FormattedCreateDate</small>
                                                        </div>
                                                    </div>
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <!-- Pagination Section -->
                                <div class="Pagination container mt-4">
                                    <nav aria-label="Page navigation">
                                        <ul class="pagination justify-content-center">
                                            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                                                <a class="page-link" href="@Url.Action("research", "Tiss", new { page = ViewBag.CurrentPage - 1 })" aria-label="Previous">
                                                    <span aria-hidden="true">&laquo;</span>
                                                </a>
                                            </li>
                                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                            {
                                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                                    <a class="page-link" href="@Url.Action("research", "Tiss", new { page = i })">@i</a>
                                                </li>
                                            }
                                            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                                                <a class="page-link" href="@Url.Action("research", "Tiss", new { page = ViewBag.CurrentPage + 1 })" aria-label="Next">
                                                    <span aria-hidden="true">&raquo;</span>
                                                </a>
                                            </li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </main>
                    </div>
                </section>
            </div>
        </div>
    </div>


    <script>
        $(document).ready(function () {
    var isLoggedIn = '@Session["LoggedIn"]' == 'True';

if (isLoggedIn) {
    $('#logoutBtn').show(); //顯示登出按鈕
} else {
    $('#loginBtn').show(); //顯示登入按鈕
    }
        loadContent(); //加載已儲存的內容
});
        //顯示當前選擇的子項目
        document.addEventListener('DOMContentLoaded', function () {
            var currentUrl = window.location.pathname;
            var menuLinks = document.querySelectorAll('.MenuLink');

            menuLinks.forEach(function (link) {

                if (link.getAttribute('href') === currentUrl) {
                    link.classList.add('active');
                }
            });
        });
    </script>
</body>
</html>