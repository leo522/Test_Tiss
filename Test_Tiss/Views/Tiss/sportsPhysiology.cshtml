@model IEnumerable<Test_Tiss.Models.ArticleContentModel>
@{
    Layout = "~/Views/Shared/_TissMaster.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <link href="~/site/css/MenuLinkStyle.css" rel="stylesheet" />
    <link href="~/site/css/ViewArticle.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid px-0 mt-header">
        <div class="BasePageLayout">
            <!-- Banner Section -->
            <div class="BasePageBanner position-relative">
                <div class="Mask position-absolute w-100 h-100" style="background-color: rgba(0, 0, 0, 0.5);"></div>
                <img class="img-fluid d-none d-lg-block w-100" src="/site/img/banner_research.25875290.jpg" alt="科普專欄封面圖片">
                <div class="container position-absolute top-50 start-50 translate-middle text-center text-white">
                    <h1 class="display-4">Popular Science</h1>
                    <p class="lead">
                        <img src="/site/img/title_icon_white.5e98ec4e.svg" alt="科普專欄" title="科普專欄"> 科普專欄
                    </p>
                </div>
            </div>

            <!-- Main Content Section -->
            <section class="row">
                <!-- Sidebar Navigation -->
                <aside class="col-lg-3 col-md-4 col-12 bg-light p-4">
                    <!-- Breadcrumb for smaller screens -->
                    <div class="BaseBreadcrumb d-lg-none mb-4">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/Tiss/Home">首頁</a></li>
                                <li class="breadcrumb-item active" aria-current="page">科普專欄</li>
                            </ol>
                        </nav>
                    </div>

                    <!-- Sidebar Menu -->
                    <h5 class="mb-3">科普專欄</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2">
                            <a class="nav-link" href="/Tiss/research">全部文章</a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link" href="/Tiss/sportMedicine">運動醫學</a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link" href="/Tiss/sportTech">運動科技</a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link" href="/Tiss/sportScience">運動科學</a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link" href="/Tiss/sportsPhysiology">運動生理</a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link" href="/Tiss/sportsPsychology">運動心理</a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link" href="/Tiss/physicalTraining">體能訓練</a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link" href="/Tiss/sportsNutrition">運動營養</a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link" href="/Tiss/childrenScience">兒少科普</a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link" href="/Tiss/SciencePosterDownLoad">科普海報下載專區</a>
                        </li>
                        @if (Session["LoggedIn"] != null && (bool)Session["LoggedIn"])
                        {
                            <li class="nav-item mb-2">
                                <a class="nav-link text-warning" href="/Tiss/ArticleCreate">新增文章</a>
                            </li>
                        }
                    </ul>
                </aside>

                <!-- Main Article Content -->
                <main class="col-lg-9 col-md-8 col-12 bg-white p-4">
                    <!-- Breadcrumb for larger screens -->
                    <div class="BaseBreadcrumb d-none d-lg-block mb-4">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/Tiss/Home">首頁</a></li>
                                <li class="breadcrumb-item active" aria-current="page">科普專欄</li>
                            </ol>
                        </nav>
                    </div>

                    <!-- Articles List -->
                    <div class="NewsVideoList">
                        <div class="container">
                            <div class="row">
                                @foreach (var article in Model)
                                {
                                    <div class="col-md-4 mb-4">
                                        <a href="@Url.Action("ViewArticle", "Tiss", new { encryptedUrl = article.EncryptedUrl })" class="text-decoration-none">
                                            <div class="card h-100">
                                                <div class="position-relative">
                                                    @if (article.ImageContent != null)
                                                    {
                                                        string base64Image = Convert.ToBase64String(article.ImageContent);
                                                        <img src="data:image/png;base64,@base64Image" class="card-img-top" alt="圖片">
                                                    }
                                                    <div class="position-absolute top-0 start-0 bg-primary text-white px-2 py-1">
                                                        @article.ContentType
                                                    </div>
                                                </div>
                                                <div class="card-body">
                                                    <h5 class="card-title">@article.Title</h5>
                                                    <p class="card-text">@article.BodyContent</p>
                                                </div>
                                                <div class="card-footer d-flex justify-content-between">
                                                    <small class="text-muted">@article.Hashtags</small>
                                                    <small class="text-muted">@article.FormattedCreateDate</small>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Pagination -->
                    <div class="Pagination mt-4">
                        <div class="container">
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">
                                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("physicalTraining", "Tiss", new { page = i })">@i</a>
                                        </li>
                                    }
                                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Action("physicalTraining", "Tiss", new { page = ViewBag.CurrentPage - 1 })" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Action("physicalTraining", "Tiss", new { page = ViewBag.CurrentPage + 1 })" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </main>
            </section>
        </div>
    </div>
    <script>
        //登出按鈕顯示功能
$(document).ready(function () {
    var isLoggedIn = '@Session["LoggedIn"]' == 'True';

if (isLoggedIn) {
    $('#logoutBtn').show(); //顯示登出按鈕
} else {
    $('#loginBtn').show(); //顯示登入按鈕
    }
        loadContent(); //加載已儲存的內容
});
        document.addEventListener('DOMContentLoaded', function () {
            var currentUrl = window.location.pathname;
            var menuLinks = document.querySelectorAll('.MenuLink');

            menuLinks.forEach(function (link) {

                if (link.getAttribute('href') === currentUrl) {
                    link.classList.add('active');
                }
            });
        });
    </script>
</body>
</html>