</head>
<body>
    <div class="container-fluid px-0 mt-header">
        <div class="BasePageLayout">
            <div class="BasePageBanner">
                <div class="Mask"></div>
                <img class="PageBannerItemBg img-fluid d-none d-lg-block" src="/site/img/banner_research.25875290.jpg" alt="科普專欄封面圖片">
            </div>
            <section class="el-container">
                <aside class="el-aside col-lg-3 mb-4">
                    <nav class="BaseBreadcrumb d-block d-lg-none">
                        <div class="container">
                            <div class="Title">
                                <div class="BannerTitle" title="Popular Science">
                                    Popular Science
                                </div>
                                <div class="BannerSubTitle">
                                    <img class="icon" src="/site/img/title_icon_white.5e98ec4e.svg" alt="科普專欄" title="科普專欄">科普專欄
                                </div>
                                <!-- Breadcrumb navigation -->
                                <div class="breadcrumb-container d-block d-lg-none">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="/Tiss/Home">首頁</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">科普專欄</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </nav>
                    <div class="content">
                        <h4 class="Title mb-4" title="科普專欄">科普專欄</h4>
                        <ul class="Menu list-unstyled">
                            <li><a class="MenuLink d-block text-decoration-none mb-2" href="/Tiss/research" title="全部文章">全部文章</a></li>
                            <li><a class="MenuLink d-block text-decoration-none mb-2" href="/Tiss/sportMedicine" title="運動醫學">運動醫學</a></li>
                            <li><a class="MenuLink d-block text-decoration-none mb-2" href="/Tiss/sportTech" title="運動科技">運動科技</a></li>
                            <li><a class="MenuLink d-block text-decoration-none mb-2" href="/Tiss/sportScience" title="運動科學">運動科學</a></li>
                            <li><a class="MenuLink d-block text-decoration-none mb-2" href="/Tiss/sportsPhysiology" title="運動生理">運動生理</a></li>
                            <li><a class="MenuLink d-block text-decoration-none mb-2" href="/Tiss/sportsPsychology" title="運動心理">運動心理</a></li>
                            <li><a class="MenuLink d-block text-decoration-none mb-2" href="/Tiss/physicalTraining" title="體能訓練">體能訓練</a></li>
                            <li><a class="MenuLink d-block text-decoration-none mb-2" href="/Tiss/sportsNutrition" title="運動營養">運動營養</a></li>
                            <li><a class="MenuLink d-block text-decoration-none mb-2" href="/Tiss/childrenScience" title="兒少科普">兒少科普</a></li>
                            <li><a class="MenuLink d-block text-decoration-none mb-2" href="/Tiss/SciencePosterDownLoad" title="科普海報下載專區">科普海報下載專區</a></li>
                        </ul>
                    </div>
                </aside>

                <!-- Main Content Area -->
                <main class="el-main col-lg-9 bg-white">
                    <div class="MainContainer">
                        <!-- Breadcrumb for both larger and smaller screens -->
                        <div class="BaseBreadcrumb">
                            <div class="container">
                                <div class="breadcrumb-container d-none d-lg-block mb-4">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item">
                                            <a href="/Tiss/Home">首頁</a>
                                        </li>
                                        <li class="breadcrumb-item active" aria-current="page">科普專欄</li>
                                    </ol>
                                </div>

                                <!-- Breadcrumb for smaller screens -->
                                <div class="breadcrumb-container d-block d-lg-none">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="/Tiss/Home">首頁</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">科普專欄</li>
                                    </ol>
                                </div>
                            </div>
                        </div>

                        <!-- Articles Section -->
                        <div class="MainContainer">
                            <div class="NewsVideoList">
                                <div class="container">
                                    <div class="row">
                                        @foreach (var article in Model)
                                        {
                                            <div class="col-md-4 mb-4">
                                                <a href="@Url.Action("ViewArticle", "Tiss", new { encryptedUrl = article.EncryptedUrl })" class="">
                                                    <div class="NewsItemBox">
                                                        <div class="NewsItemImg">
                                                            @if (article.ImageContent != null)
                                                            {
                                                                string base64Image = Convert.ToBase64String(article.ImageContent);
                                                                <img src="data:image/png;base64,@base64Image" alt="圖片" />
                                                            }
                                                            <div class="tag">@article.ContentType</div>
                                                            <div class="Mask" title="閱讀更多">閱讀更多</div>
                                                        </div>
                                                        <span class="el-text is-line-clamp NewsItemTitle">@article.Title</span>
                                                        <div class="NewsItemContent">
                                                            <span class="el-text is-line-clamp">@article.BodyContent</span>
                                                        </div>
                                                    </div>
                                                    <div class="tag-date-container">
                                                        <div class="el-tag el-tag--plain is-round">
                                                            <div class="el-tag__content">@article.Hashtags</div>
                                                        </div>
                                                        <div class="date-tag">@article.FormattedCreateDate</div>
                                                    </div>
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="Pagination">
                                <div class="container">
                                    <nav aria-label="Page navigation">
                                        <ul class="pagination justify-content-center">
                                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                            {
                                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                                    <a class="page-link" href="@Url.Action("research", "Tiss", new { page = i })">@i</a>
                                                </li>
                                            }
                                            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                                                <a class="page-link" href="@Url.Action("research", "Tiss", new { page = ViewBag.CurrentPage - 1 })" aria-label="Previous">
                                                    <span aria-hidden="true">&laquo;</span>
                                                </a>
                                            </li>
                                            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                                                <a class="page-link" href="@Url.Action("research", "Tiss", new { page = ViewBag.CurrentPage + 1 })" aria-label="Next">
                                                    <span aria-hidden="true">&raquo;</span>
                                                </a>
                                            </li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
